{
  "name": "twing-markdown",
  "version": "1.0.0",
  "description": "Markdown extension for Twing",
  "main": "index.js",
  "browser": "browser.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc --project .",
    "bundle": "browserify build/browser.js -g uglifyify -s Twing -o build/dist/lib.min.js",
    "clean": "rimraf build",
    "cover": "nyc npm t",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postbuild": "replace-in-file '__VERSION__' $npm_package_version build/**/*",
    "postpack": "rimraf lib dist browser.* index.*",
    "prebuild": "npm run clean",
    "precover": "rimraf coverage .nyc_output",
    "prepack": "npm run build -- --sourceMap false && npm run bundle && mv build/* .",
    "pretest": "npm run build",
    "test": "npm run fastest:all",
    "fastest:all": "tape 'test/tests/**/test.js' | tap-bail | tap-spec"
  },
  "keywords": [
    "twing",
    "markdown",
    "twig",
    "twig-markdown"
  ],
  "author": "Nathan Kelly <nathan@nathan-kelly.com>",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "git://github.com/nedkelly/twing-markdown"
  },
  "devDependencies": {
    "@types/luxon": "^1.4.1",
    "@types/marked": "^0.5.0",
    "@types/node": "^10.12.15",
    "@types/tmp": "0.0.33",
    "nyc": "^13.1.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.2",
    "tap-bail": "^1.0.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "twing": "^2.1.2",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "browserify": "^16.2.3",
    "coveralls": "^3.0.2",
    "marked": "^0.5.2",
    "uglifyify": "^5.0.1"
  }
}
